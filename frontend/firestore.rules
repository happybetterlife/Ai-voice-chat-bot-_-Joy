rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write their own session data
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.userId ||
         request.auth.uid == request.resource.data.userId);
    }

    // Allow authenticated users to read/write chat history
    match /chats/{chatId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.userId ||
         request.auth.uid == request.resource.data.userId);
    }

    // Voice configurations - read only for authenticated users
    match /voices/{voiceId} {
      allow read: if request.auth != null;
      allow write: if false; // Admin only via backend
    }

    // Persona configurations - read only for authenticated users
    match /personas/{personaId} {
      allow read: if request.auth != null;
      allow write: if false; // Admin only via backend
    }
  }
}